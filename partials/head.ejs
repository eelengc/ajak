<div class="login">
    <% if (locals.currentUser) { %>
        <h6>Welcome,  <%=currentUser.name%></h6>
    <% }else{ %>
    <a href="/user/new">Sign Up</a>
    <a href="/session/new">Login</a>
    <%}%>
    <% if (locals.currentUser){ %>
        <form action="/session?_method=DELETE" method="POST" class="logout" >
            <input type="submit" value="Logout" class="logout-input">
        </form>
    <%}%>
  </div>